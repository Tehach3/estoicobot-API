{
  "compilerOptions": {
    "target": "es2021",                      
    "module": "commonjs",                      
    "moduleResolution": "node",                
    "strict": true,                            
    "esModuleInterop": true,                  
    "allowSyntheticDefaultImports": true,      
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,             
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "incremental": true,                       
    "outDir": "./dist",                        
    "baseUrl": ".",                            
    "types": ["node"]
  },
  "include": ["src/**/*"],                     
  "exclude": ["node_modules", "dist"]          
}
